pragma solidity ^0.8.0;

import {ERC20} from "@openzeppelin/contracts/token/ERC20/ERC20.sol";
import {Ownable} from "@openzeppelin/contracts/access/Ownable.sol";
contract sUSD is ERC20, Ownable {
    address immutable private representative_asset;
    constructor(address asset) ERC20("Synthetic US Dollar", "sUSD") Ownable(msg.sender) {
        representative_asset = asset;
    }

    function mint(address to, uint256 amount) external onlyOwner {
        _mint(to, amount);
    }

    function burn(address from, uint256 amount) external onlyOwner {
        _burn(from, amount);
    }

    function representativeAsset() external view returns (address) {
        return representative_asset;
    }


}